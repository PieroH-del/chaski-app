<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.AppChaski" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorError">@color/error</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <!-- Splash theme -->
    <style name="Theme.AppChaski.Splash" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/primary</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <!-- Chip de Categoría -->
    <style name="Widget.AppChaski.Chip.Category" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@drawable/chip_background_selector</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="chipMinHeight">36dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <!-- Botón Primario -->
    <style name="Widget.AppChaski.Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/text_on_secondary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Botón Outline -->
    <style name="Widget.AppChaski.Button.Outline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Card Restaurante -->
    <style name="Widget.AppChaski.Card.Restaurante" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeColor">@color/accent_light</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
</resources>

